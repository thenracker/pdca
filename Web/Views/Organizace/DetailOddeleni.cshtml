@model DataAccess.Models.DataUnit.Oddeleni
@{
    ViewBag.Title = "Organizace";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div>

    <h1>@Model.Nazev</h1>

    <div class="panel panel-default">
        <div class="panel-heading panel-success">
            <a class="btn btn-default " href="@Url.Action("DetailUsek",new {id = Model.Usek.Id})">@Web.Resources.LopTexts.Zpet</a>
            <a class="btn btn-warning " href="@Url.Action("EditOddeleni",new {id = Model.Id})">@Web.Resources.LopTexts.UpravitOddeleni</a>
            
        </div>
        <div class="panel-body">
            <table class="table table-condensed table-striped">
                <thead>
                    <tr>
                        <th>@Web.Resources.LopTexts.Jmeno</th>
                        
                        <th>@Web.Resources.LopTexts.Operace</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VedouciOdeleni)
                    {
                        <tr>
                            <td>@item.Uzivatel.Jmeno @item.Uzivatel.Prijmeni</td>
                            
                            <td>
                                <a class="btn btn-primary" href="@Url.Action("DetailUzivatel", new {id = item.Id})"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                                <a class="btn btn-warning " href="@Url.Action("EditUzivatel", new {id = item.Id})"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>

