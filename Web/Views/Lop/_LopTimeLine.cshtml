@using DataAccess.Models.DataUnit
@using DataAccess.Models.DataUnit.Users
@model IList<LopWorkFlowEvent>

<link href="@Url.Content("~/Content/timeline.css")" rel="stylesheet"/>

<ul class="timeline">
    @for (var i = 0; i < Model.Count; i++)
    {
        <li class="@(i % 2 == 0 ? "" : "timeline-inverted")">
            <div class="timeline-badge @Model[i].Color">
                <span class="glyphicon @Model[i].Obrazek"></span>
            </div>
            <div class="timeline-panel">
                <div class="timeline-heading">
                    <h4 class="timeline-title">@Model[i].Nadpis</h4>
                    <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> @Model[i].Datum - @(new Uzivatel(Model[i].Autor))</small>
                    </p>
                </div>
                <div class="timeline-body">
                    @Html.Raw(Model[i].Text)
                </div>
            </div>
        </li>
    }
</ul>