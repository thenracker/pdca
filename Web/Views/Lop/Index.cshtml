                    {
                        string s = "";
                        for (int i = 0; i < lop.Materialy.Count; i++)
                        {
                            if (i == lop.Materialy.Count - 1)
                            {
                                s += lop.Materialy[i].Produkt.Popis;
                            }
                            else
                            {
                                s += Html.Raw(lop.Materialy[i].Produkt.Popis + ", ");
                            }
                        }
