    <!--PODBARVENÍ ŘÁDKŮ DLE HOTOVÉHO / PROŠVIHNUTÉHO / KE KONTROLE-->
            <tr class="@(lop.FinishDate != null ? "success" : (lop.ShouldBeAlreadyDone() ? "danger" : (lop.Status == StatusUkolu.Closed ? "warning" : "")))">
