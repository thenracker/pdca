                    }
                </td>
                <td style="@(uzivatel.ShowCollumn(ListUkoluTableName, "ProductSapNumber") ? "" : "display: none;")">
                    @if (lop.Materialy.Count > 0)
                    {
                        string s = "";
                        for (int i = 0; i < lop.Materialy.Count; i++)
