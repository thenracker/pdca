                    @Html.Raw(lop.Resitel.ToTextBtn())
                </td>
                <td style="@(uzivatel.ShowCollumn(ListUkoluTableName, "Investice") ? "" : "display: none;")">
                    @(lop.Investice ? "A" : "N")
                </td>
                <td style="@(uzivatel.ShowCollumn(ListUkoluTableName, "LessonLearned") ? "" : "display: none;")">
                    @(lop.LessonLearned ? "A" : "N")
                </td>
