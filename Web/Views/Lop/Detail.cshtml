            </td>
            <td style="padding-left: 10px;">
                <div class="form-group">
                    <div>
                        @if (Model.FinishDate != null)
                        {
                            @(((DateTime) Model.FinishDate).ToShortDateString())
                        }
                        else
                        {
                            @Html.Raw("-")
                        }
                    </div>
                </div>
            </td>
            <td style="padding-left: 10px;">
                <div class="form-group">
                    <div>
                        @if (Model.LastChangedDate != null)
                        {
                            @(((DateTime)Model.LastChangedDate).ToString())
                        }
                        else
                        {
                            @Html.Raw("-")
                        }
                    </div>
