                        <tbody>
                        @foreach (var m in Model.Materialy)
                        {
                            <tr>
                                <td>@m.Produkt</td>
                                <td>@m.Produkt.Druh</td>
                                <td>@m.Produkt.SapCislo</td>
                                <td>@m.Produkt.PopisSap</td>
